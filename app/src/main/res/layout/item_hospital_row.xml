<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgHospitalIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_upload_you_tube"
            android:scaleType="centerCrop"
            app:tint="@color/primary_blue"
            android:layout_marginEnd="8dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Hospital"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/text_dark"/>

            <TextView
                android:id="@+id/tvHospitalCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ciudad, Bolivia"
                android:textSize="12sp"
                android:textColor="@color/text_muted"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnHospitalCall"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@android:drawable/ic_menu_call"
                app:tint="@color/cat_orange_real"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>

            <ImageView
                android:id="@+id/btnHospitalMap"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ubicaciones"
                app:tint="@color/primary_blue"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>